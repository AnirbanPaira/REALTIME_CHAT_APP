# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Atlas Connection String
# Get this from MongoDB Atlas: Cluster → Connect → Connect your application
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/realtime-chat?retryWrites=true&w=majority
MONGODBURI=mongodb+srv://your-username:your-password@cluster.mongodb.net/realtime-chat?retryWrites=true&w=majority

# JWT Secret - Generate a strong random string (at least 32 characters)
# You can generate one using: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters

# Client URL - Update this to your frontend URL after deployment
# Example: CLIENT_URL=https://your-app.vercel.app
CLIENT_URL=http://localhost:5173

# Cloudinary Configuration - Get from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

